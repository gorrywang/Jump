<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.github.www.jump.activity.SplashActivity">

    <TextView
        android:id="@+id/ac_splash_txt_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Jump"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ac_splash_txt_jump"
        android:layout_centerHorizontal="true"
        android:text="So happy to share"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/ac_splash_load"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        app:loading_color="#ffffff"
        app:loading_width="5dp" />

</RelativeLayout>
